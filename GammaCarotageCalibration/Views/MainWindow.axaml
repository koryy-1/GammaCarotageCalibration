			<StackPanel Grid.Row="0" HorizontalAlignment="Center">
				<TextBlock Text="Отношение выходного сигнала по малому и большому зондам" VerticalAlignment="Center"/>
				<TextBlock Text="Для алюминия:"/>
				<TextBox Text="{Binding Alfa1, Mode=TwoWay}" Width="80"/>
				<TextBlock Text="Для дюралюмния:"/>
				<TextBox Text="{Binding Alfa2, Mode=TwoWay}" Width="80"/>
				<TextBlock Text="Размер магния:"/>
				<TextBox Text="{Binding Alfa3, Mode=TwoWay}" Width="80"/>
			</StackPanel>

			<StackPanel Grid.Row="1" HorizontalAlignment="Center">
				<TextBlock Text="Результаты расчетов:" VerticalAlignment="Center"/>
				<TextBlock Text="{Binding Coefs}" VerticalAlignment="Center"/>
				<TextBlock Text="{Binding CalcSigmas}" VerticalAlignment="Center"/>
			</StackPanel>

			<Border Grid.Row="2">
				<lvc:CartesianChart
					Series="{Binding ProbeSeries}"
					ZoomMode="Both">
				</lvc:CartesianChart>
			</Border>
		</Grid>
	</Grid>

